{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "noImplicitThis": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es6"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}